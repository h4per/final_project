<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="llvt_group.llvt_project.Dashboard.ProfileTabController">

    <left>
        <AnchorPane prefHeight="700.0" prefWidth="226.0" style="-fx-background-color: #04040A;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="34.0" layoutY="48.0" text="LLVT" textFill="#b6e500">
                    <font>
                        <Font name="MS Gothic" size="36.0" />
                    </font>
                </Label>
                <Button fx:id="learnActionButton" layoutX="20.0" layoutY="135.0" mnemonicParsing="false" onAction="#learnActionButtonClicked" style="-fx-background-color: transparent;" text="LEARN" textFill="WHITE">
                    <font>
                        <Font name="MS Gothic" size="24.0" />
                    </font>
                </Button>
                <Button fx:id="practiceActionButton" layoutX="20.0" layoutY="177.0" mnemonicParsing="false" onAction="#practiceActionButtonClicked" style="-fx-background-color: transparent;" text="PRACTICE" textFill="WHITE">
                    <font>
                        <Font name="MS Gothic" size="24.0" />
                    </font>
                </Button>
                <Button fx:id="profileActionButton" layoutX="20.0" layoutY="218.0" mnemonicParsing="false" onAction="#profileActionButtonClicked" style="-fx-background-color: transparent;" text="PROFILE" textFill="WHITE">
                    <font>
                        <Font name="MS Gothic" size="24.0" />
                    </font>
                </Button>
                <MenuButton fx:id="languageChooseBox" layoutX="20.0" layoutY="368.0" mnemonicParsing="false" style="-fx-background-color: transparent;" text="RUSSIAN" textFill="WHITE">
                    <items>
                        <MenuItem mnemonicParsing="false" style="-fx-background-color: transparent;" text="ENGLISH" />
                        <MenuItem mnemonicParsing="false" style="-fx-background-color: transparent;" text="GERMAN" />
                    </items>
                    <font>
                        <Font name="MS Gothic" size="24.0" />
                    </font>
                </MenuButton>
                <Button fx:id="exitButton" layoutX="20.0" layoutY="258.0" mnemonicParsing="false" onAction="#exitButtonOnAction" style="-fx-background-color: transparent;" text="EXIT" textFill="WHITE">
                    <font>
                        <Font name="MS Gothic" size="24.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </left>

    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: #b6e500;" BorderPane.alignment="CENTER">

            <!-- Profile Page -->
            <AnchorPane fx:id="profilePage" prefHeight="700.0" prefWidth="635.0" style="-fx-background-color: #b6e500;" visible="true">
                <children>
                    <Label layoutX="45.0" layoutY="46.0" text="PROFILE PAGE" textFill="#04040A">
                        <font>
                            <Font name="MS Gothic" size="36.0" />
                        </font>
                    </Label>

                    <Label layoutX="49.0" layoutY="141.0" text="USERNAME:" textFill="#04040A">
                        <font>
                            <Font name="MS Gothic" size="24.0" />
                        </font>
                    </Label>

                    <Label fx:id="usernameLabel" layoutX="200.0" layoutY="141.0" text="User123" textFill="#04040A">
                        <font>
                            <Font name="MS Gothic" size="24.0" />
                        </font>
                    </Label>

                    <Label layoutX="49.0" layoutY="183.0" text="LEARNED WORDS:" textFill="#04040A">
                        <font>
                            <Font name="MS Gothic" size="24.0" />
                        </font>
                    </Label>

                    <Label fx:id="wordsLearnedLabel" layoutX="234.0" layoutY="184.0" text="25" textFill="#04040A">
                        <font>
                            <Font name="MS Gothic" size="24.0" />
                        </font>
                    </Label>

                    <Button fx:id="logoutButton" layoutX="49.0" layoutY="255.0" style="-fx-background-color: #04040A; -fx-text-fill: white;" text="LOG OUT">
                        <font>
                            <Font name="MS Gothic" size="22.0" />
                        </font>
                    </Button>
                    <Button fx:id="updateButton" layoutX="181.0" layoutY="255.0" style="-fx-background-color: #04040A; -fx-text-fill: white;" text="UPDATE">
                        <font>
                            <Font name="MS Gothic" size="22.0" />
                        </font>
                    </Button>
                    <Button fx:id="deleteButton" layoutX="299.0" layoutY="256.0" style="-fx-background-color: #04040A; -fx-text-fill: white;" text="DELETE">
                        <font>
                            <Font name="MS Gothic" size="22.0" />
                        </font>
                    </Button>
                </children>
            </AnchorPane>
        </StackPane>
    </center>
</BorderPane>
