<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="llvt_group.llvt_project.Dashboard.DashboardController">

   <left>
      <AnchorPane prefHeight="700.0" prefWidth="226.0" style="-fx-background-color: #04040A;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="34.0" layoutY="50.0" text="LLVT" textFill="#b6e500">
               <font>
                  <Font name="MS Gothic" size="36.0" />
               </font>
            </Label>
            <Button fx:id="learnActionButton" layoutX="20.0" layoutY="135.0" mnemonicParsing="false" onAction="#learnActionButtonClicked" style="-fx-background-color: transparent;" text="LEARN" textFill="WHITE">
               <font>
                  <Font name="MS Gothic" size="24.0" />
               </font>
            </Button>
            <Button fx:id="profileActionButton" layoutX="20.0" layoutY="178.0" mnemonicParsing="false" onAction="#profileActionButtonClicked" style="-fx-background-color: transparent;" text="PROFILE" textFill="WHITE">
               <font>
                  <Font name="MS Gothic" size="24.0" />
               </font>
            </Button>
            <MenuButton fx:id="languageChooseBox" layoutX="20.0" layoutY="353.0" mnemonicParsing="false" style="-fx-background-color: transparent;" text="RUSSIAN" textFill="WHITE">
               <items>
                  <MenuItem mnemonicParsing="false" style="-fx-background-color: transparent;" text="ENGLISH" />
                  <MenuItem mnemonicParsing="false" style="-fx-background-color: transparent;" text="GERMAN" />
               </items>
               <font>
                  <Font name="MS Gothic" size="24.0" />
               </font>
            </MenuButton>
            <Button fx:id="exitButton" layoutX="20.0" layoutY="220.0" mnemonicParsing="false" onAction="#exitButtonOnAction" style="-fx-background-color: transparent;" text="EXIT" textFill="WHITE">
               <font>
                  <Font name="MS Gothic" size="24.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </left>

   <center>
      <StackPane fx:id="mainContent" style="-fx-background-color: #b6e500;" BorderPane.alignment="CENTER">

         <!-- Learn Page -->
         <AnchorPane fx:id="welcomePage" prefHeight="700.0" prefWidth="635.0" style="-fx-background-color: #b6e500;">
            <Label layoutX="30.0" layoutY="49.0" text="WELCOME PAGE">
               <font>
                  <Font name="MS Gothic" size="36.0" />
               </font>
            </Label>
            <Label layoutX="129.0" layoutY="150.0">
               <font>
                  <Font name="MS Gothic" size="36.0" />
               </font>
            </Label>
            <Label layoutX="153.0" layoutY="134.0" text="WELCOME TO LLVT!">
               <font>
                  <Font name="MS Gothic" size="30.0" />
               </font>
            </Label>
            <Label layoutX="111.0" layoutY="188.0">
               <font>
                  <Font name="MS Gothic" size="26.0" />
               </font>
            </Label>
         </AnchorPane>

      </StackPane>
   </center>
</BorderPane>
